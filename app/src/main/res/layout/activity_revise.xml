<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/reviseRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reviseActivityAd"
        android:scrollbars="none"
        />
    <TextView
        android:id="@+id/sadIconTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fa_id_frown"
        android:fontFamily="@font/fontawesome"
        android:textSize="@dimen/icon_size"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:paddingTop="@dimen/medium_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/nothingSolvedTextView"/>
    <TextView
        android:id="@+id/nothingSolvedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_questions_solved"
        android:padding="@dimen/medium_margin"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/black"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/sadIconTextView"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/reviseActivityAd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/less_medium_width"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/logo"
        android:background="@color/light_grey"
        />
</android.support.constraint.ConstraintLayout>