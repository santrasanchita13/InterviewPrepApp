<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_button_white"
    android:padding="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginStart="@dimen/small_margin"
    android:layout_marginEnd="@dimen/small_margin">
    <TextView
        android:id="@+id/questionRevise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_text"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/answerRevise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/questionRevise"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/default_text"
        android:textSize="@dimen/text_size"
        android:textColor="@color/grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_id_redo"
        android:fontFamily="@font/fontawesome"
        android:textSize="@dimen/icon_size_small"
        app:layout_constraintTop_toBottomOf="@id/answerRevise"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>