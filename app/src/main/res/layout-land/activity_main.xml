<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/welcomeButton"
        android:text="@string/default_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/medium_margin"/>
    <Button
        android:id="@+id/startPreparationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/previousQuestionsButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/start_preparation"
        android:textColor="@color/black"
        android:textSize="@dimen/large_text_size"
        android:padding="@dimen/small_margin"
        android:textAllCaps="false"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <Button
        android:id="@+id/previousQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_white"
        app:layout_constraintTop_toBottomOf="@+id/startPreparationButton"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityAd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/previously_solved_questions"
        android:textColor="@color/black"
        android:textSize="@dimen/large_text_size"
        android:padding="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:textAllCaps="false"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <ImageView
        android:id="@+id/logoImageMain"
        android:layout_width="@dimen/medium_width"
        android:layout_height="@dimen/medium_width"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityAd"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        />
    <!--
